Процедура ПрочитатьДанныеЗагруженногоТД()
	
	ДД64 = СцТ_ЗначениеВДереве(ДеревоЗначения, "ДвоичныеДанныеТД", "",, Истина);
	
	Если НЕ ЗаполнитьОтображениеХранимогоТД(ДД64, ТД) Тогда
		#Если НЕ Сервер Тогда
			ТекстПредупреждения = НСтр("ru = 'Не удалось прочитать табличный документ. Убедитесь, что файл соответствует формату mxl'");
			ПоказатьПредупреждение(, ТекстПредупреждения);
		#КонецЕсли
	КонецЕсли;
	
	КоличествоСтрок   = ТД.Высотатаблицы;
	КоличествоКолонок = ТД.ШиринаТаблицы;
	
КонецПроцедуры

&НаСервере
Процедура УправлениеВидиомстьюНаСтраницеАвтогруппыТД(Очистить = Истина)
	
	Если ВариантХраненияТД = 0 Тогда
		// Таблица в шаге
		
		СцТ_ОбновитьТаблДокПоДаннымФормы_НаСервере("", "ТД", "ТабличныйДокумент");
		
		КоличествоКолонок = СцТ_ЗначениеВДереве(ДеревоЗначения, "КоличествоКолонокТД", 1,, Истина);
		КоличествоСтрок   = СцТ_ЗначениеВДереве(ДеревоЗначения, "КоличествоСтрокТД"  , 1,, Истина);
		
		Элементы.КоличествоСтрок.Доступность   = Истина;
		Элементы.КоличествоКолонок.Доступность = Истина;
		
		Элементы.ТД.Редактирование = Истина;
		
		Элементы.ТД_НадписьПояснение.Заголовок    = НСтр("ru = 'определить автоматически по границе выделенной области'");
		Элементы.ТД_НадписьПояснение.Гиперссылка  = Истина;
		
		Элементы.СтраницыНастройкиТД.ТекущаяСтраница                  = Элементы.СтраницаНастройкиТД_ТаблицаВШаге;
		Элементы.АвтогруппаТД_СтраницыКоманднойПанели.ТекущаяСтраница = Элементы.АвтогруппаТД_СтраницаОбновить;
		
	ИначеЕсли ВариантХраненияТД = 1 Тогда
		// Двоичные данные в шаге
		
		Элементы.КоличествоСтрок.Доступность   = Ложь;
		Элементы.КоличествоКолонок.Доступность = Ложь;
		
		ПрочитатьДанныеЗагруженногоТД();
		
		Элементы.ТД.Редактирование = Ложь;
		
		Элементы.ТД_НадписьПояснение.Заголовок   = НСтр("ru = '(установлено автоматически по данным хранимого файла)'");
		Элементы.ТД_НадписьПояснение.Гиперссылка = Ложь;
		
		Элементы.СтраницыНастройкиТД.ТекущаяСтраница                  = Элементы.СтраницаНастройкиТД_ТаблицаВШаге;
		Элементы.АвтогруппаТД_СтраницыКоманднойПанели.ТекущаяСтраница = Элементы.АвтогруппаТД_СтраницаПрочитать;
		
	ИначеЕсли ВариантХраненияТД = 2 Тогда
		// внешний файл
		
		Элементы.КоличествоСтрок.Доступность = Ложь;
		Элементы.КоличествоКолонок.Доступность = Ложь;
		
		Если Очистить Тогда
			ТД.Очистить();
		КонецЕсли;
		
		КоличествоСтрок   = 0;
		КоличествоКолонок = 0;
		
		Элементы.ТД_НадписьПояснение.Заголовок = НСтр("ru = '(будет определено по факту в процессе выполнения)'");
		Элементы.ТД_НадписьПояснение.Гиперссылка = Ложь;
		
		Элементы.СтраницыНастройкиТД.ТекущаяСтраница = Элементы.СтраницаНастройкиТД_ВнешнийФайл;
		
	КонецЕсли;
	
КонецПроцедуры

// Определение координат тестируемой области в табличном документе
//
// Параметры
// АдресОбласти - адрес области табличного документа
// Возвращаемое значение - координаты области
&НаКлиентеНаСервереБезКонтекста
Функция СцТ_КоординатыОбласти(Знач АдресОбласти)
	
	АдресОбласти = СокрЛП(ВРег(АдресОбласти));
	
	Результат = Новый Структура("НачальнаяСтрока,НачальнаяКолонка,КонечнаяСтрока,КонечнаяКолонка", 0, 0, 0, 0);
	
	ПозицияДвоеточия = Найти(АдресОбласти, ":");
	Если ПозицияДвоеточия = 0 Тогда
		АдресНачала = АдресОбласти;
		АдресКонца  = АдресОбласти;
	Иначе
		АдресНачала = Лев(АдресОбласти, ПозицияДвоеточия - 1);
		АдресКонца  = Сред(АдресОбласти, ПозицияДвоеточия + 1);
	КонецЕсли;
	
	ПозицияС = Найти(АдресНачала, "C");
	Результат.НачальнаяСтрока  = Число(Сред(АдресНачала, 2, ПозицияС - 2));
	Результат.НачальнаяКолонка = Число(Сред(АдресНачала, ПозицияС + 1));
	
	ПозицияС = Найти(АдресКонца, "C");
	Результат.КонечнаяСтрока  = Число(Сред(АдресКонца, 2, ПозицияС - 2));
	Результат.КонечнаяКолонка = Число(Сред(АдресКонца, ПозицияС + 1));
	
	Возврат Результат;
	
КонецФункции

&НаСервереБезКонтекста
Функция ЗаполнитьОтображениеХранимогоТД(ДД64, ТД)
	
	ТД.Очистить();
	
	Если НЕ ПустаяСтрока(ДД64) Тогда
		ДД = Base64Значение(ДД64);
		ИмяВрФайла = ПолучитьИмяВременногоФайла("mxl");
		ДД.Записать(ИмяВрФайла);
		
		Попытка
			ТД.Прочитать(ИмяВрФайла);
		Исключение
			Возврат Ложь;
		КонецПопытки;
		
	КонецЕсли;
	
	Возврат Истина;
	
КонецФункции


