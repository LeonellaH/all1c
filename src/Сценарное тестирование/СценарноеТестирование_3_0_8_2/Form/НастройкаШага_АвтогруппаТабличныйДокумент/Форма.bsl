// Формирование описания шага на клиенте
&НаКлиенте
Функция СцТ_СформироватьОписаниеШага_НаКлиенте(Краткое = Ложь)
	
	ВозвращаемоеОписание = НСтр("ru = 'Табличный документ%1'");
	
	УзелТаблДок = СцТ_ГлавнаяФорма.СцТ_НайтиУзелДереваФормы(ДеревоЗначения, "Имя", "ТабличныйДокумент");
	Если УзелТаблДок = Неопределено Тогда
		ПредставлениеТаблДок = "";
	Иначе
		ПредставлениеТаблДок = " """
			+ ?(ПустаяСтрока(УзелТаблДок.Синоним), УзелТаблДок.Значение, УзелТаблДок.Синоним)
			+ """";
	КонецЕсли;
	
	ВозвращаемоеОписание = СтрЗаменить(ВозвращаемоеОписание, "%1", ПредставлениеТаблДок);
	
	Если Краткое Тогда
		Возврат ВозвращаемоеОписание;
	КонецЕсли;
	
	Если ВариантХраненияТД = 0 Тогда
		
		Дополнение = НСтр("ru = '. Эталонное значение табличного документа хранится в шаге'");
		
	ИначеЕсли ВариантХраненияТД = 1 Тогда
		// Хранится в виде файла в двоичных данных
		
		Дополнение = НСтр("ru = '. Эталонное значение хранится в виде двоичных данных'");
		
	ИначеЕсли ВариантХраненияТД = 2 Тогда
		// Хранится путь к внешнему файлу
		Если Лев(ИмяВнешнегоФайла, 1) = "&" Тогда
			Дополнение = НСтр("ru = '. Эталонное значение хранится во внешнем файле, путь к которому хранится в переменной ""%1""'");
			Дополнение = СтрЗаменить(Дополнение, "%1", Сред(ИмяВнешнегоФайла, 2));
		Иначе
			Дополнение = НСтр("ru = '. Эталонное значение хранится во внешнем файле ""%1""'");
			Дополнение = СтрЗаменить(Дополнение, "%1", ИмяВнешнегоФайла);
		КонецЕсли;
		
	КонецЕсли;
	
	ВозвращаемоеОписание = ВозвращаемоеОписание
		+ Дополнение;
	
	Возврат ВозвращаемоеОписание;
	
КонецФункции

