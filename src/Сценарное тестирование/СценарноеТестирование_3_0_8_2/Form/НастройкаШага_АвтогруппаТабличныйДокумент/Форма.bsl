		СцТ_ТекстПодсказки = ПолеФормы.ПолучитьТекстПодсказки();
	Исключение
		СцТ_ТекстПодсказки = "";
	КонецПопытки;
	
	СвойстваОбъекта.Вставить("Заголовок"     , ПолеФормы.ТекстЗаголовка);
	СвойстваОбъекта.Вставить("ТекстПодсказки", СцТ_ТекстПодсказки);
	
