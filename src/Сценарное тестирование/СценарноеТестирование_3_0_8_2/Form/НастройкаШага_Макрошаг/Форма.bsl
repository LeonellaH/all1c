// Индивидуальная настройка формы для шага
//
&НаСервере
Процедура СцТ_НастроитьФормуДляШага()
	
	СВТЗ = Элементы.ТП_ТипЗначения.СписокВыбора;
	СВТЗ.Добавить("Строка"  , НСтр("ru = 'Строка'"));
	СВТЗ.Добавить("Число"   , НСтр("ru = 'Число'"));
	СВТЗ.Добавить("Дата"    , НСтр("ru = 'Дата'"));
	СВТЗ.Добавить("Булево"  , НСтр("ru = 'Булево'"));
	
	УзелИмениМакрошага = СцТ_НайтиУзелДереваФормы(ДеревоЗначения, "Имя", "ИмяМакрошага");
	Если УзелИмениМакрошага <> Неопределено Тогда
		ИмяМакрошага = УзелИмениМакрошага.Значение;
	КонецЕсли;
	
	// Заполнение списка выбора имени макрошага
	Элементы.ИмяМакрошага.СписокВыбора.Очистить();
	
	ДеревоМакрошаговНаСервере = ПолучитьИзВременногоХранилища(АдресДереваМакрошагов);
	Для каждого СтрокаДерева Из ДеревоМакрошаговНаСервере.Строки Цикл 
		Элементы.ИмяМакрошага.СписокВыбора.Добавить(СтрокаДерева.Наименование);
	КонецЦикла;
	
	Элементы.ИмяМакрошага.СписокВыбора.СортироватьПоЗначению();
	
	УзелПараметровШага = СцТ_НайтиУзелДереваФормы(ДеревоЗначения, "Имя", "ПараметрыШага");
	
	Если УзелПараметровШага <> Неопределено Тогда
		Для каждого УзелПараметра Из УзелПараметровШага.ПолучитьЭлементы() Цикл
			
			НоваяСтрокаПараметра = ТаблицаПараметров.Добавить();
			НоваяСтрокаПараметра.Имя      = УзелПараметра.Имя;
			НоваяСтрокаПараметра.Значение = УзелПараметра.Значение;
			
			Если ТипЗнч(УзелПараметра.Значение) = Тип("Число") Тогда
				НоваяСтрокаПараметра.Тип      = "Число";
			ИначеЕсли ТипЗнч(УзелПараметра.Значение) = Тип("Булево") Тогда
				НоваяСтрокаПараметра.Тип      = "Булево";
			ИначеЕсли ТипЗнч(УзелПараметра.Значение) = Тип("Дата") Тогда
				НоваяСтрокаПараметра.Тип      = "Дата";
			Иначе
				НоваяСтрокаПараметра.Тип      = "Строка";
			КонецЕсли;
			
		КонецЦикла;
	КонецЕсли;
	
	Элементы.Страницы.ТекущаяСтраница = Элементы.Страница_Макрошаг;
	
КонецПроцедуры

