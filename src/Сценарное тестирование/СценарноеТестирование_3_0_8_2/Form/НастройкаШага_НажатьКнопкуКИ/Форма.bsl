	//КонецЕсли;
	
	Модифицированность = Истина;
	
КонецПроцедуры

&НаКлиенте
Процедура ВыбратьКнопкуКИ(Команда)
	
	Если НЕ СцТ_ГлавнаяФорма.СцТ_ТестируемоеПриложениеАктивно() Тогда
		ПоказатьПредупреждение(, НСтр("ru = 'Тестируемый клиент не запущен. Выбор кнопок командного интерфейса недоступен.'"));
		Возврат;
	КонецЕсли;
	
	Если ОА_ЭтоНовый Тогда
		Если ОА_ОписательПоложенияШагаВДереве.ИдентификаторУзлаРодителя <> Неопределено Тогда
			РодительУзла = СцТ_ГлавнаяФорма.СцТ_ПолучитьДанныеШагаПоИдентификатору(ВызвавшаяФорма,ОА_ОписательПоложенияШагаВДереве.ИдентификаторУзлаРодителя);
		Иначе
			РодительУзла = Неопределено;
		КонецЕсли;
	Иначе
		РодительУзла = ДанныеШага.ПолучитьРодителя();
	КонецЕсли;
	
	//ТипКонтейнераШага = СцТ_ГлавнаяФорма.СцТ_ПолучитьТипКонтейнераШага(ДанныеШага);
	
	ВладельцыОбъектов = Новый Массив;
	ТекстСообщения    = "";
	Если РодительУзла <> Неопределено И РодительУзла.ТипШага = "ИнтерактивнаяАвтоГруппа" Тогда
		
		ОписаниеРезультата    = "";
		ТекущееОкно = СцТ_ГлавнаяФорма.СцТ_ПолучитьФормуДляИнтерактивногоШага(
			РодительУзла,
			Ложь,
			ОписаниеРезультата,
			Истина);
		
		Если ТекущееОкно = Неопределено Тогда
			ТекстСообщения = НСтр("ru = 'Ошибка при обращении к текущему окну: %1.
				|Выбор кнопок командного интерфейса текущего окна недоступен.'");
			ТекстСообщения = СтрЗаменить(ТекстСообщения, "%1", СцТ_ГлавнаяФорма.СцТ_РасшифроватьОшибку(ОписаниеРезультата));
		ИначеЕсли Не ТекущееОкно.Основное Тогда
			ВладельцыОбъектов.Добавить(
				Новый Структура("ПредставлениеОбъектаПриложения,ОбъектТестируемогоПриложения,ТипОкна,Тип",
				НСтр("ru = 'Текущее окно формы'"),
				ТекущееОкно,
				2,
				Тип("ТестируемоеОкноКлиентскогоПриложения")));
		КонецЕсли;
		
	КонецЕсли;
	
	ГлавноеОкно = СцТ_ГлавнаяФорма.СцТ_ПолучитьОсновноеОкноТестируемогоПриложения();
	
	Если ГлавноеОкно = Неопределено Тогда
		ТекстСообщения = ТекстСообщения
			+ ?(ПустаяСтрока(ТекстСообщения), "", Символы.ПС)
			+ НСтр("ru = 'Не удалось обратиться к главному окну тестируемого приложения, возможно тесируемое приложение не запущено.'");
	Иначе
		ВладельцыОбъектов.Добавить(Новый Структура("ПредставлениеОбъектаПриложения,ОбъектТестируемогоПриложения,ВыделитьЖирным,ТипОкна,Тип",
			СтрЗаменить(НСтр("ru = 'Окно ""%1"" (главное окно)'"),
				"%1",
				СцТ_ГлавнаяФорма.СцТ_ЗаголовокИнтерактивногоОбъекта(ГлавноеОкно)),
			ГлавноеОкно,
			Истина,
			1,
			Тип("ТестируемоеОкноКлиентскогоПриложения")));
	КонецЕсли;
	
	Если ПустаяСтрока(ЭлементФормы_Заголовок) Тогда
		ОписаниеТекущейКнопкиКИ = Неопределено;
	Иначе
		
		ОписаниеТекущейКнопкиКИ = Новый Структура;
		
		Если Сред(ВариантПоискаОбъекта, 2, 1) = "1" Тогда
			ОписаниеТекущейКнопкиКИ.Вставить("ЗаголовокОбъекта", ЭлементФормы_Заголовок);
		КонецЕсли;
		
		Если Прав(ВариантПоискаОбъекта, 1) = "1" И ПутьКЭлементуФормы <> Неопределено Тогда
			ОписаниеТекущейКнопкиКИ.Вставить("ПутьКОбъекту", ПутьКЭлементуФормы);
		КонецЕсли;
		
	КонецЕсли;
	
	ТипыОтображаемых       = Новый СписокЗначений;
	ТипыВыбираемыхОбъектов = Новый СписокЗначений;
	
	ТипыОтображаемых.Добавить("КомандныйИнтерфейс");
	ТипыОтображаемых.Добавить("ГруппаКомандногоИнтерфейса");
	ТипыВыбираемыхОбъектов.Добавить("КнопкаКомандногоИнтерфейса");
	
	ОписаниеОповещения = Новый ОписаниеОповещения("ПослеВыбораКнопкиКИ", ЭтотОбъект);
	
	СцТ_ГлавнаяФорма.СцТ_ВыбратьОбъектыТестируемогоПриложения(
		ВладельцыОбъектов,
		ТипыВыбираемыхОбъектов,
		ТипыОтображаемых,
		ОписаниеТекущейКнопкиКИ,,,,,
		Истина,,,,
		ОписаниеОповещения);
	
КонецПроцедуры


&НаКлиенте
Процедура ПослеВыбораКнопкиКИ(РезультатФормы, ДопПараметры) Экспорт
	
	Если РезультатФормы = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	Если ТипЗнч(РезультатФормы) <> Тип("Структура") Тогда
		Возврат;
	КонецЕсли;
	
	
	ПутьКЭлементуФормы = Новый Структура;
	Если РезультатФормы.ПутьКОбъекту <> Неопределено Тогда
		НомерСтроки = 1;
		Для каждого СтруктураМассива Из РезультатФормы.ПутьКОбъекту Цикл
			ИмяСтруктурыСтроки = "Str_" + Формат(НомерСтроки, "ЧГ=0");
			
			// Тип объекта не сериализуется на сервере
			Если СтруктураМассива.ТипОбъекта = Тип("ТестируемаяГруппаКомандногоИнтерфейса") Тогда
				НовыйТип = "ТестируемаяГруппаКомандногоИнтерфейса";
			ИначеЕсли СтруктураМассива.ТипОбъекта = Тип("ТестируемаяГруппаФормы") Тогда
				НовыйТип = "ТестируемаяГруппаФормы";
			ИначеЕсли СтруктураМассива.ТипОбъекта = Тип("ТестируемаяДекорацияФормы") Тогда
				НовыйТип = "ТестируемаяДекорацияФормы";
			ИначеЕсли СтруктураМассива.ТипОбъекта = Тип("ТестируемаяКнопкаКомандногоИнтерфейса") Тогда
				НовыйТип = "ТестируемаяКнопкаКомандногоИнтерфейса";
			ИначеЕсли СтруктураМассива.ТипОбъекта = Тип("ТестируемаяКнопкаФормы") Тогда
				НовыйТип = "ТестируемаяКнопкаФормы";
			ИначеЕсли СтруктураМассива.ТипОбъекта = Тип("ТестируемаяТаблицаФормы") Тогда
				НовыйТип = "ТестируемаяТаблицаФормы";
			ИначеЕсли СтруктураМассива.ТипОбъекта = Тип("ТестируемоеПолеФормы") Тогда
				НовыйТип = "ТестируемоеПолеФормы";
			ИначеЕсли СтруктураМассива.ТипОбъекта = Тип("ТестируемаяФорма") Тогда
				НовыйТип = "ТестируемаяФорма";
			Иначе
				Продолжить;
			КонецЕсли;
			СтруктураМассива.ТипОбъекта = НовыйТип;
			
			ПутьКЭлементуФормы.Вставить(ИмяСтруктурыСтроки, СтруктураМассива);
			НомерСтроки = НомерСтроки + 1;
		КонецЦикла;
	КонецЕсли;
	
	ЭлементФормы_Заголовок = РезультатФормы.Заголовок;
	ТипОкна                = РезультатФормы.ТипОкна;
	
	// Формирование представления кнопки
	Представление = "";
	ОписаниеТекОбъекта = РезультатФормы.ОписаниеРодительскогоОбъекта;
	ПредставлениеПанели = "";
	Пока ОписаниеТекОбъекта <> Неопределено Цикл
		
		Если ОписаниеТекОбъекта.Тип = Тип("ТестируемыйКомандныйИнтерфейсОкна") Тогда
			Прервать;
		КонецЕсли;
		
		ПредставлениеПанели = ОписаниеТекОбъекта.Заголовок
			+ ?(ПустаяСтрока(ПредставлениеПанели), "", " -> ")
			+ ПредставлениеПанели;
		
		ОписаниеТекОбъекта = ОписаниеТекОбъекта.ОписаниеРодительскогоОбъекта;
		
	КонецЦикла;
	
	Представление = """" + ЭлементФормы_Заголовок + """"
		+ ?(ПустаяСтрока(ПредставлениеПанели),
			"",
			НСтр("ru = ' на панели '") + """" + ПредставлениеПанели + """");
	
	
	Модифицированность = Истина;
	
КонецПроцедуры



